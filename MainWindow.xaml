<Window x:Class="PhotoGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Gallery" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="PhotoBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White"
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Photo Gallery"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                    <TextBlock x:Name="FolderPathText"
                               Text="No folder selected"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Select Folder"
                        Click="SelectFolder_Click"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Photo Gallery Section -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="10">
            <Grid x:Name="GalleryPanel">
                <!-- Welcome Message (shown when no folder selected) -->
                <StackPanel x:Name="WelcomePanel"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“·"
                               FontSize="72"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Welcome to Photo Gallery"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Click 'Select Folder' to get started"
                               FontSize="16"
                               Foreground="#888888"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Photo Grid (shown when photos are loaded) -->
                <ItemsControl x:Name="PhotoItemsControl"
                             Visibility="Collapsed">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PhotoBorderStyle}"
                                    Width="280" Height="280"
                                    MouseLeftButtonDown="Photo_Click"
                                    Tag="{Binding}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                                                     ShadowDepth="2"
                                                     Opacity="0.2"
                                                     Color="#000000"/>
                                </Border.Effect>
                                <Grid>
                                    <Image Source="{Binding}"
                                           Stretch="UniformToFill"
                                           Margin="5"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <TextBlock x:Name="StatusText"
                       Text="Ready"
                       FontSize="12"
                       Foreground="#666666"/>
        </Border>
    </Grid>
</Window>
